#!/usr/bin/env bash
# Create WordPress dev environment in Apache2
#

if [[ "$#" != 1 || "$1" == "-h" || "$1" == "--help" ]] ; then cat <<HELP
WordPress dev generator.

Creates vhosts and install the WordPress.

Usage:
wp-create-dev [site_name]

Example:
wp-create-dev testing
HELP
exit;
fi

echo " -> Starting installation..."

name=$1
url=$name.local

conf="<VirtualHost *:80>\n\tServerAdmin webmaster@localhost\n\tServerName $url\n\tDocumentRoot /var/www/$name\n\n\t<Directory /var/www/$name/>\n\t\tOptions Indexes FollowSymLinks MultiViews\n\t\tAllowOverride All\n\t\tOrder allow,deny\n\t\tallow from all\n\t</Directory>\n\n\tErrorLog ${APACHE_LOG_DIR}/error.log\n\tCustomLog ${APACHE_LOG_DIR}/access.log combined\n</VirtualHost>\n\n# vim: syntax=apache ts=4 sw=4 sts=4 sr noet"

confname="$url.conf"

# Add domain to /etc/hosts
echo " -> Adding domain to /etc/hosts..."
sudo bash -c "echo '127.0.0.1 $url' >> /etc/hosts"

# Create conf file
echo " -> Creating vhosts for $url..."
sudo touch /etc/apache2/sites-available/$confname
sudo bash -c "echo -e '$conf' > /etc/apache2/sites-available/$confname"

# Enable new conf
sudo a2ensite $confname
sudo service apache2 reload

# Install WP
echo " -> Installing WordPress..."
sudo chown $USER.$USER /var/www
mkdir -p /var/www/$name
cd /var/www/$name
wp core download
wp core config --dbname="$name" --dbuser="root" --dbpass="root" --extra-php <<PHP
// File System Method
define( 'FS_METHOD', 'direct' );

// Dev
define( 'WP_DEBUG', true );
define( 'WP_DEBUG_LOG', true );
define( 'WP_DEBUG_DISPLAY', true );
PHP
wp db create

# Set permissions
touch /var/www/$name/.htaccess
mkdir -p /var/www/$name/wp-content/languages
mkdir -p /var/www/$name/wp-content/upgrade
mkdir -p /var/www/$name/wp-content/uploads
sudo chown www-data.www-data /var/www/$name/.htaccess /var/www/$name/wp-content /var/www/$name/wp-content/uploads

echo " -> WP installed successfully: http://$url"
